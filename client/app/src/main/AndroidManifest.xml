<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.spbau.shevchenko.chatbattle">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:name="ru.spbau.shevchenko.chatbattle.backend.MyApplication"

        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar">
        <activity android:name=".frontend.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".frontend.SearchActivity" />
        <activity android:name=".frontend.ProfileActivity" />
        <activity android:name=".frontend.PlayerActivity" />
        <activity android:name=".frontend.MenuActivity" />
        <activity android:name=".frontend.SignupActivity" />

        <service
            android:name=".backend.ChatService"
            android:enabled="true" />

        <activity android:name=".frontend.LeaderActivity" />
        <activity android:name=".frontend.WinnerPickActivity" />
        <activity android:name=".frontend.WhiteboardActivity" />

    </application>

</manifest>