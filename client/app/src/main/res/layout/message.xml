<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="75dp">


    <TextView
        android:id="@+id/message_sender"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/message_body"
        android:layout_below="@+id/message_sender"
        android:layout_alignStart="@+id/message_sender"
        android:layout_alignLeft="@+id/message_sender" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/message_image"
        android:layout_below="@+id/message_body"
        android:layout_alignStart="@+id/message_body"
        android:layout_alignLeft="@+id/message_body" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/delete_message_btn"
        android:id="@+id/retry_sending_btn"
        android:src="@drawable/retry"
        android:visibility="gone"
        />
    <ImageButton
        android:id="@+id/delete_message_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@drawable/delete"
        android:visibility="gone"
        />

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="@dimen/message_spinner"
        android:layout_alignParentRight="true"
        android:id="@+id/delivering_progress_bar"
        android:visibility="gone"
        android:progressDrawable="@drawable/waiting_circular_bar" />


</RelativeLayout>