<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_search"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@color/light_blue">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/search"
        android:textSize="20pt"
        android:layout_marginTop="50dp"
        android:id="@+id/search_text_view"
        android:layout_centerHorizontal="true"
        android:textColor="@color/blue900"/>


    <ImageButton
        android:layout_width="180dp"
        android:layout_height="181dp"


        android:text="@string/search_screen_search_as_leader_button"
        android:id="@+id/search_as_leader_button"
        android:background="@drawable/leader_button"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="180dp"
        android:layout_height="181dp"
        android:text="@string/search_screen_search_as_player_button"
        android:id="@+id/search_as_player_button"

        android:background="@drawable/player_button"
        android:layout_alignTop="@+id/search_as_leader_button"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progress_bar"
        android:progressDrawable="@drawable/waiting_circular_bar"
        android:layout_alignBottom="@+id/search_as_leader_button"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="49dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/search_screen_stop_searching_button"
        android:id="@+id/stop_searching_button"
        android:layout_marginTop="400dp"
        style="?android:attr/buttonBarButtonStyle"
        android:textColor="@color/blue900"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
