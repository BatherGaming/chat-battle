<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/login_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login_view"/>
    <TextView
        android:id="@+id/login_value_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/not_loaded"
        android:layout_toRightOf="@+id/login_text_view"
        android:layout_toEndOf="@+id/login_text_view"/>
    <TextView
        android:id="@+id/age_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_text_view"
        android:text="@string/age_view"/>
    <TextView
        android:id="@+id/age_value_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/age_text_view"
        android:layout_toEndOf="@+id/age_text_view"
        android:layout_below="@+id/login_value_view"
        android:text="@string/not_loaded"/>
    <TextView
        android:id="@+id/sex_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/age_text_view"
        android:text="@string/sex_view"/>
    <TextView
        android:id="@+id/sex_value_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/sex_text_view"
        android:layout_toEndOf="@+id/sex_text_view"
        android:layout_below="@+id/age_value_view"
        android:text="@string/not_loaded"/>
    <TextView
        android:id="@+id/rating_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sex_text_view"
        android:text="@string/rating_view"/>
    <TextView
        android:id="@+id/rating_value_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/rating_text_view"
        android:layout_toEndOf="@+id/rating_text_view"
        android:layout_below="@+id/sex_value_view"
        android:text="@string/not_loaded"/>

</RelativeLayout>
